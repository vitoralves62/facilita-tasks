.label-container
    display flex
    flex-direction row
    gap 5px
    background #FFF
    box-shadow 0px 4px 6px rgba(0, 0, 0, 0.1)  
    width 100%
    max-width 633px
    height 100%
    max-height 64px
    border-radius 5px
    .input-checkbox
        background #E2EEF5
        max-width 33px
        width 100% 
    .task-text-container
        display flex
        flex-direction row
        gap 50px
        .task-label-title
            font-family Gilroy_SemiBold
        .task-label-categorie
            font-family Gilroy_Bold
            color #FFF
            background #FFC42E
            border-radius 40px
            padding 5px
    .task-options
        background none
        border none