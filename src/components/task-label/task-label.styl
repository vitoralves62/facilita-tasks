.label-container
    display flex
    flex-direction row
    gap 5px
    background #ffffff
    box-shadow 0px 4px 6px rgba(0, 0, 0, 0.1)  
    width 633px
    max-width 633px
    height 64px
    max-height 64px
    border-radius 5px
    align-items center
    position relative
    .checkbox
        position relative
        margin-left: 15px
        margin-bottom: 5px
    .task-text-container
        display flex
        flex-direction row
        align-items center
        width 100%
        flex-grow 1
        .task-label-title
            font-family Gilroy_SemiBold
            max-width 540px
    .task-options-and-categorie
        display flex
        align-items center
        gap 10px
        .task-label-categorie
            right 6.2%
            position absolute
            font-family Gilroy_Bold
            color #FFF
            border-radius 40px
            padding 5px 10px 5px 10px
        .task-options
            background none
            border none
            margin-right 15px
            &:hover
                cursor pointer
        .kebab-menu-in-label
            position absolute
            top 10%
            right 5%
    .urgente
        background #FF2E79 // Cor vermelha para urgente
    .importante
        background #FFC42E // Cor amarela para importante
    .normal
        background #FFF // Cor azul para normal, por exemplo
    &.checked
        opacity 50%
        .task-label-title
            color #304458
            text-decoration line-through
        .urgente
            background #FF2E79 // Cor vermelha para urgente
        .importante
            background #FFC42E // Cor amarela para importante
        .normal
            background #ffffff
    