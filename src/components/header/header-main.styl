.MainHeader
    background-color #FFF
    max-width: 4000px
    width 100%
    max-height 83px
    height: 10%
    display flex
    flex-direction column
    font-family Gilroy_Bold
    align-items flex-end
    justify-content center
    box-shadow 0px 4px 6px rgba(0, 0, 0, 0.1)  

    .ProfileBlock
        max-width 241px
        max-height 55px
        display flex
        flex-direction row
        font-family Gilroy_SemiBold
        gap 10px
        position relative
        margin-right 3%
        .profile-pic
            width 100%
            max-width 47px
            max-height 47px
            border-radius 50%
        .profile-infos
            display flex
            flex-direction column
            position relative
            .name
                position relative
                top 15%
                color #283848
                font-size 15px
            .role
                position relative
                top -20%
                color #2693FF
                font-size 12px