.sidebar
    background-color: #2693FF
    width 6%
    height: 100%
    display flex
    flex-direction column
    font-family Gilroy_Bold
    align-items center 
    justify-content center

    .sidebar-itens
        text-decoration: none
        list-style-type: none
        display: flex;
        flex-direction: column
        align-items center
        padding: 0

        .dashboard, .tasks, .settings
            width 100%
            border 0.5px solid #46A3FF
            display flex
            justify-items center
            align-items center
            padding 20px 0
        
        .graph, .check-circle, .gears
            width 32px
            height 32px

        .dash-button, .tasks-button, .config-button
            display flex
            flex-direction column
            background none
            border none
            color #FFF
            padding 0
            align-items center 
            justify-content center
            width 100%
            text-align center
            

        .dash-button:hover, .tasks-button:hover, .config-button:hover
            cursor pointer

    .Logo
        width 65%
        margin 20px 0
        display flex
        justify-content center
        align-items center
        height auto
        position relative