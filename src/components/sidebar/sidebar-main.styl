.sidebar
    background-color: #2693FF
    width 7.9vw
    height: 100%
    display flex
    flex-direction column
    font-family Gilroy_Bold
    align-items center
    justify-content center

    .sidebar-itens
        text-decoration: none
        list-style-type: none
        display: flex;
        flex-direction: column
        align-items center
        width 100%
        padding 0
        
        .dashboard, .tasks, .settings
            width 99%
            display flex
            justify-content center
            align-items center
            padding 20px 0
            border 0.5px solid #46A3FF
        
        .dashboard:hover, .tasks:hover, .settings:hover
            cursor pointer
            background-color #1182F2

        .graph, .check-circle, .gears
            width 32px
            height 32px

        .dash-button, .tasks-button, .config-button
            display flex
            width 100%
            flex-direction column
            background none
            border none
            color #FFF
            align-items center 
            justify-content center
            text-align center
            font-size 12px
            padding 10px 0

        .dash-button:hover, .tasks-button:hover, .config-button:hover
            cursor pointer

    .Logo
        width 3rem
        margin-left 0.75rem
        display flex
        justify-content center
        align-items center
        height auto
        position relative