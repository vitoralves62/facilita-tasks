.main-container-home
    display flex
    justify-content center
    align-items center
    height 100vh
    width 100vw
    background-color #E9F4FB

.side-bar-main
    position absolute
    left 0%

.categories-bar-main
    position absolute
    left 106px

.header-main
    width 100%
    position: absolute
    left:  0%
    top 0%

.tasks-container
    width 50%
    height 70%
    position relative
    top 10%
    left 11%
    display flex
    flex-direction column
    gap 3px
    overflow-y: auto;
    .search-bar-home
        margin-top 20px
    .task-label-home
        margin-top: 20px
        width 100% 
        display flex
.add-task-button
    position absolute
    bottom 7%
    right 5%
    max-width 77px
    max-height: 77px
    width 100%
    height 100%
    border none
    border-radius 50%
    background-color #0ED984
    color #FFF
    font-size 45px
    font-weight bold
.add-task-button:hover
    cursor pointer
    background-color #1AD182